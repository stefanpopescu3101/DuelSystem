<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DuelSysWebsite</title>
    <link href='~/css/site.css?v=@Guid.NewGuid().ToString()' rel='stylesheet' type='text/css' />
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
</head>
<body>

    <div class="col-1">
        <nav class="nav-bar">

            <p class="navbar-brand" asp-area="">MENU</p>

            <br /><br /><br />
                        <ul class="navbar-nav ">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index"><i class="fas fa-home"></i>Home</a>
                            </li>

                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Login"><i class="fas fa-sign-in-alt"></i>Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Profile"><i class="fas fa-user-circle"></i>Profile</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/MyTournaments"><i class="fas fa-user-circle"></i>My Tournaments</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Tournaments"><i class="fas fa-user-circle"></i>Tournaments</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/TournamentsPast"><i class="fas fa-user-circle"></i>Past Tournaments</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/LogOut"><i class="fas fa-sign-out-alt"></i>Log Out</a>
                                </li>

                            }

                        </ul>



        </nav>



    </div>



    <div class="col-2">
        <header>
            <div class="social">
                <br />

                <p>
                    Follow us on
                    <a href="https://www.facebook.com/leo.stef.7" class="social"><i class="fab fa-facebook"></i></a>
                    <a href="https://www.instagram.com/stefaan_popescu/" class="social"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social"><i class="fab fa-whatsapp"></i></a>
                </p>

            </div>

        </header>
        <main class="content">
            <article>@RenderBody()</article>

            <aside></aside>
        </main>
        <footer>
            <br />
            <br />

            <p>
                Design and code by Stefan Popescu - &copy; 2022
            </p>
        </footer>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>